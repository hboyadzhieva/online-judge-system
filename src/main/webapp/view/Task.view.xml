<!DOCTYPE xml>
<mvc:View
	controllerName="summer.camp.judge.controller.Task"
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:u="sap.ui.unified"
	xmlns:form="sap.ui.layout.form">
	<u:Shell>
			<u:headItems>
				<u:ShellHeadItem
					tooltip="Home"
					icon="sap-icon://home"
					visible="true"
					press="handlePressHome" />
			</u:headItems>
			<u:headEndItems>
				<u:ShellHeadItem
					icon="sap-icon://log"
					tooltip="Logoff"
					press="handleLogoffPress" />
			</u:headEndItems>
			<u:user>
				<u:ShellHeadUserItem
					image="sap-icon://person-placeholder"
					username="Kiril Kabakchiev"
					press="handleUserItemPressed" />
			</u:user>
	<Page
		id="taskPage"
		title="Task">
		<headerContent>
		</headerContent>
		<content>
			<form:SimpleForm
				editable="true"
				layout="ResponsiveGridLayout" >
				<Label text="Name"/>
				<Text text="{/name}"/>
				<Label text="Statement"/>
				<Text text="{/statement}"/>
				<Label text="Sample Input"/>
				<Text text="{/sampleInput}"/>
				<Label text="Sample Output"/>
				<Text text="{/sampleOutput}"/>
				<Label text="Time Limit"/>
				<Text text="{/timeLimit} ms"/>
				<Label text="Language"/>
				<Select id="languageSelect" width="7em">
					<core:Item key="java" text="Java"/>
				</Select>
				<Label text="Solution"/>
				<TextArea id="solutionTextArea" rows= "30" width="85%" />
				<Label text=""/>
				<Button width="7em" text="Submit" press="onSubmitPress"/>
			</form:SimpleForm>
		</content>
		<footer>
			<Toolbar>
			</Toolbar>
		</footer>
	</Page>
	</u:Shell>
</mvc:View>