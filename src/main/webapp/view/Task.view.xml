<!DOCTYPE xml>
<mvc:View
	controllerName="summer.camp.judge.controller.Task"
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:form="sap.ui.layout.form">
	<Page
		id="taskPage"
		title="Task">
		<headerContent>
		</headerContent>
		<content>
			<form:SimpleForm
				editable="true"
				layout="ResponsiveGridLayout" >
				<Label text="Name"/>
				<Text text="{/name}"/>
				<Label text="Description"/>
				<Text text="{/description}"/>
				<Label text="Link to Document"/>
				<Link text="Link to Document" href="{/linkToDocument}"/>
				<Label text="Language"/>
				<Select width="7em">
					<core:Item key="java" text="Java"/>
				</Select>
				<Label text="Solution"/>
				<TextArea growing="true" width="100%"/>
				<Label text=""/>
				<Button width="7em" text="Submit" press="onSubmitPress"/>
			</form:SimpleForm>
		</content>
		<footer>
			<Toolbar>
			</Toolbar>
		</footer>
	</Page>
</mvc:View>